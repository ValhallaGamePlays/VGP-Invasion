//drone
decal DroneDecal1
{
	pic DRFXA1
	shade "08 08 08"
	randomflipx
	randomflipy
}
decal DroneDecal2
{
	pic DRFXB1
	shade "08 08 08"
	randomflipx
	randomflipy
}
decalgroup DroneDecal
{
	DroneDecal1        1
	DroneDecal2        1
}
generator DroneShot        DroneDecal


